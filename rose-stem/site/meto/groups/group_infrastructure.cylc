    ]
    }) %}

{# Platform Generic Groups #}
{% if site_vars.launch_platform == "spice" %}
    {% do site_groups.update({
        "infrastructure_developer": [
            "scripts",
            "infrastructure_spice_developer",
            "infrastructure_xc40_developer",
            "infrastructure_unit_tests",
            "infrastructure_integration_tests"
        ],
        "infrastructure": [
            "infrastructure_developer",
            "infrastructure_spice",
            "infrastructure_xc40"
        ],
        "infrastructure_unit_tests": [
            "infrastructure_spice_unit_tests",
            "infrastructure_xc40_unit_tests"
        ],
        "infrastructure_integration_tests": [
            "infrastructure_spice_integration_tests",
            "infrastructure_xc40_integration_tests"
        ]
        }) %}
{% else %}
    {% do site_groups.update({
        "infrastructure_developer": [
            "scripts",
            "infrastructure_azspice_developer",
            "infrastructure_ex1a_developer",
            "infrastructure_integration_tests"
        ],
        "infrastructure": [
            "infrastructure_developer",
            "infrastructure_azspice",
            "infrastructure_ex1a"
        ],
        "infrastructure_unit_tests": [
            "infrastructure_azspice_unit_tests",
            "infrastructure_ex1a_unit_tests"
        ],
        "infrastructure_integration_tests": [
            "infrastructure_azspice_integration_tests",
            "infrastructure_ex1a_integration_tests"
        ]
        }) %}
{% endif %}

{# Platform Generic Extends #}
{% do site_groups.developer.extend(site_groups.infrastructure_developer) %}
{% do site_groups.all.extend(site_groups.infrastructure) %}
{% do site_groups.unit_tests.extend(site_groups.infrastructure_unit_tests) %}
{% do site_groups.unit_tests.extend(site_groups.infrastructure_integration_tests) %}

{# Spice Extends #}
