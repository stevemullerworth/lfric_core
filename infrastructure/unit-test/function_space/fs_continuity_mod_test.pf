!> Test the fs_continuity_mod methods
!>
module fs_continuity_mod_test

  use constants_mod,       only: i_def, str_def
  use fs_continuity_mod,   only: functionspace_from_name,       &
                                 name_from_functionspace,       &
                                 is_fs_horizontally_continuous, &
                                 is_fs_vertically_continuous,   &
                                 W0, Wchi
  use funit

  implicit none

contains

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @test
  subroutine test_name_from_functionspace()

    implicit none

    integer(i_def) :: test_functionspace

    test_functionspace = W0
    @assertEqual('W0', name_from_functionspace(test_functionspace))

    test_functionspace = Wchi
    @assertEqual('Wchi', name_from_functionspace(test_functionspace))

  end subroutine test_name_from_functionspace

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @test
  subroutine test_functionspace_from_name()

    implicit none

    character(str_def) :: test_name

    test_name = 'W0'
    @assertEqual(W0, functionspace_from_name(test_name))

    test_name = 'Wchi'
    @assertEqual(Wchi, functionspace_from_name(test_name))

  end subroutine test_functionspace_from_name

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @test
  subroutine test_is_fs_horizontally_continuous()

    implicit none

    @assertTrue(is_fs_horizontally_continuous(W0))

    @assertFalse(is_fs_horizontally_continuous(Wchi))

  end subroutine test_is_fs_horizontally_continuous

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @test
  subroutine test_is_fs_vertically_continuous()

    implicit none

    @assertTrue(is_fs_vertically_continuous(W0))

    @assertFalse(is_fs_vertically_continuous(Wchi))

  end subroutine test_is_fs_vertically_continuous

end module fs_continuity_mod_test
