!> Test the W1 mass matrix computation
!>
module compute_mass_matrix_kernel_w1_mod_test

  implicit none 


contains

  @test
  subroutine compute_mass_matrix_kernel_w1_test()

    use pFUnit_Mod
    use function_space_build_mod,   only : fs_build, fs_destroy
    use field_mod,                  only : field_type,      &
                                           field_proxy_type
    use function_space_mod,         only : function_space_type, W1, W0
    use compute_mass_matrix_kernel_w1_mod, &
                                    only : compute_mass_matrix_w1_code
    use constants_mod,              only : r_def
    use quadrature_mod,             only : quadrature_type, QR3
    use operator_mod,               only : operator_type, operator_proxy_type

   implicit none
    type(field_type) :: chi(3)
    type(field_proxy_type )   :: chi_p(3) 
    type(function_space_type) :: fs
    type( quadrature_type), pointer :: qr => null()

    real(kind=r_def) :: tol
    real(kind=r_def), dimension(12,12) :: answer

    integer :: i, j, k, cell
    real(kind=r_def), parameter :: dx = 6000.0_r_def, &
                                   dy = 1000.0_r_def, &
                                   dz = 2000.0_r_def
! Required for calling mass matrix kernel    
    type( operator_type ) :: mm

    integer :: nlayers, ndf, dim, diff_dim
    integer :: ndf_chi, undf_chi
    integer :: nqp_h, nqp_v

    integer, pointer        ::  map_chi(:)  => null()
    integer, pointer        ::  orientation_w1(:) => null()
    real ( kind=r_def ), allocatable :: diff_basis(:,:,:,:), &
                                        basis(:,:,:,:)
    type( operator_proxy_type) :: mm_p

    real(kind=r_def), pointer :: xp(:,:) => null()
    real(kind=r_def), pointer :: zp(:)   => null()
    real(kind=r_def), pointer :: wh(:), wv(:) => null()

    tol = 1.0e-6_r_def  
    qr => qr%get_instance(QR3,9,3)

    ! build some function spaces ...
    call fs_build()
    
    ! make a coordinate field with a function space
    do i = 1,3
      chi(i) = field_type( vector_space = fs%get_instance( W0 ) )
      chi_p(i) = chi(i)%get_proxy()
    end do
    ! Compute coordinates
    cell = 1
    do j = 1,3
      do i = 1,3
        map_chi => chi_p(1)%vspace%get_cell_dofmap( cell )
        do k = 0,3          
          chi_p(1)%data(map_chi(1) + k) = real(i-1)*dx
          chi_p(2)%data(map_chi(1) + k) = real(j-1)*dy
          chi_p(3)%data(map_chi(1) + k) = real(k)  *dz
        end do
        cell = cell + 1
      end do
    end do

    ! Test mass matrix kernel
    mm = operator_type(fs%get_instance(W1),fs%get_instance(W1))
    mm_p= mm%get_proxy()  
    
    nqp_h=qr%get_nqp_h()
    nqp_v=qr%get_nqp_v()
    zp=>qr%get_xqp_v()
    xp=>qr%get_xqp_h()
    wh=>qr%get_wqp_h()
    wv=>qr%get_wqp_v()

    ndf_chi      = chi_p(1)%vspace%get_ndf()
    undf_chi     = chi_p(1)%vspace%get_undf()
    diff_dim = chi_p(1)%vspace%get_dim_space_diff( )
    allocate(diff_basis(diff_dim,ndf_chi,nqp_h,nqp_v) )

    nlayers  = mm_p%fs_from%get_nlayers()
    ndf  = mm_p%fs_from%get_ndf()
    dim = mm_p%fs_from%get_dim_space( )
    allocate(basis(dim,ndf,nqp_h,nqp_v) )

    call chi_p(1)%vspace%compute_diff_basis_function(                    &
         diff_basis,ndf_chi, nqp_h, nqp_v, xp, zp )

    call mm_p%fs_from%compute_basis_function(                            &
         basis, ndf, nqp_h, nqp_v, xp, zp ) 

    cell = 1
    map_chi => chi_p(1)%vspace%get_cell_dofmap(cell)
    orientation_w1 => mm_p%fs_from%get_cell_orientation ( cell )
    mm_p%local_stencil(:,:,:) = 0.0_r_def
    call compute_mass_matrix_w1_code( cell,                              &
                                      nlayers,                           &
                                      mm_p%ncell_3d,                     &
                                      mm_p%local_stencil,                &
                                      chi_p(1)%data,                     &
                                      chi_p(2)%data,                     &
                                      chi_p(3)%data,                     &
                                      ndf,                               &
                                      basis,                             &
                                      orientation_w1,                    &
                                      ndf_chi,                           &
                                      undf_chi,                          &
                                      map_chi,                           &
                                      diff_basis,                        &
                                      nqp_h,                             &
                                      nqp_v,                             &
                                      wh,                                &
                                      wv                                 &
                                      )
    
    deallocate(basis, diff_basis)

    call mass_matrix_w1(answer)
! Normalise by average edge length
    answer(:,:) = answer(:,:) * 3.0_r_def / (dx + dy + dz )
    mm_p%local_stencil(:, :, 1 ) =  mm_p%local_stencil(:, :, 1 ) &
                                 * 3.0_r_def / (dx + dy + dz )
    @assertEqual(answer, mm_p%local_stencil(:, :, 1 ), tol)
    !tear down ...
    call fs_destroy()
  
  end subroutine compute_mass_matrix_kernel_w1_test

