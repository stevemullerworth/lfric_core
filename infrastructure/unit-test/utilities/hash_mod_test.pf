!> @brief Test the functionality of hash_mod
!>
!> @details A pFUnit test module to exercise the hashing algorithms.
!>
module hash_mod_test

  use pfunit
  use mpi_mod, only : global_mpi
  use constants_mod, only: i_def, str_def

  implicit none

  private

  public set_up, tear_down, test_string_hashing
  !
  ! pFUnit depends on symbol spill
  !
  public MPITestMethod, MPITestParameter

contains
  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @before
  subroutine set_up(this)

    implicit none

    class(MPITestMethod), intent(inout) :: this

    !Store the MPI communicator for later use
    call global_mpi%initialise(this%getMpiCommunicator())

  end subroutine set_up

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @after
  subroutine tear_down(this)

    implicit none

    class(MPITestMethod), intent(inout) :: this

    ! Clear the stored MPI communicator
    call global_mpi%finalise()

  end subroutine tear_down

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @Test( npes=[1] )
  subroutine test_string_hashing(this)

    use hash_mod, only : hash_string

    implicit none

    class(MPITestMethod), intent(inout) :: this

    character(str_def) :: string
    integer(i_def) :: hash, result

    string = "This is a string"
    result = 1484

    hash = hash_string(trim(string))

    @assertEqual(result, hash)

  end subroutine test_string_hashing

end module hash_mod_test
