!> Test the rtheta computation
!>
module linear_rrho_kernel_mod_test

  implicit none 


contains

  @test
  subroutine linear_rrho_kernel_test()

    use pFUnit_Mod
    use function_space_build_mod,   only : fs_build, fs_destroy
    use field_mod,                  only : field_type,      &
                                           field_proxy_type
    use function_space_mod,         only : function_space_type, W0, W2, W3
    use linear_rrho_kernel_mod,     only : linear_rrho_code
    use constants_mod,              only : r_def
    use quadrature_mod,             only : quadrature_type, QR3

   implicit none
    type(field_type) :: chi(3)
    type(field_proxy_type )   :: chi_p(3) 
    type(function_space_type) :: fs
    type( quadrature_type), pointer :: qr => null()

    real(kind=r_def) :: tol
    real(kind=r_def), dimension(:), allocatable :: answer

    integer :: i, j, k, cell
    real(kind=r_def), parameter :: dx = 6000.0_r_def, &
                                   dy = 1000.0_r_def, &
                                   dz = 2000.0_r_def

! Required for calling kernel 
    type( field_type ) :: r_rho, u, phi

    integer                 :: nlayers, nqp_v, nqp_h
    integer                 :: ndf_w0, ndf_w2, ndf_w3
    integer                 :: undf_w0, undf_w2, undf_w3
    integer                 :: dim_w0, diff_dim_w0, dim_w2, diff_dim_w2,dim_w3
    integer, pointer  :: map_w3(:), map_w2(:), map_w0(:), orientation_w2(:) => null()

    type( field_proxy_type )        :: r_rho_proxy, u_proxy, phi_proxy
    type( field_proxy_type )        :: chi_proxy(3)
    
    real(kind=r_def), allocatable  :: basis_w3(:,:,:,:), &
                                      basis_w2(:,:,:,:), &
                                      basis_w0(:,:,:,:), &
                                      diff_basis_w2(:,:,:,:), &
                                      diff_basis_w0(:,:,:,:)

    real(kind=r_def), pointer :: xp(:,:) => null()
    real(kind=r_def), pointer :: zp(:) => null()
    real(kind=r_def), pointer :: wh(:), wv(:) => null()
   
    tol = 1.0e-6_r_def  
    qr => qr%get_instance(QR3,9,3)

    ! build some function spaces ...
    call fs_build()
    
    ! make a coordinate field with a function space
    do i = 1,3
      chi(i) = field_type( vector_space = fs%get_instance( W0 ) )
      chi_p(i) = chi(i)%get_proxy()
    end do
    ! Compute coordinates
    cell = 1
    do j = 1,3
      do i = 1,3
        map_w0 => chi_p(1)%vspace%get_cell_dofmap( cell )
        do k = 0,3          
          chi_p(1)%data(map_w0(1) + k) = real(i-1)*dx
          chi_p(2)%data(map_w0(1) + k) = real(j-1)*dy
          chi_p(3)%data(map_w0(1) + k) = real(k)  *dz
        end do
        cell = cell + 1
      end do
    end do

    ! Test kernel
    r_rho = field_type( vector_space = fs%get_instance( W3 ) )
    u     = field_type( vector_space = fs%get_instance( W2 ) )
    phi   = field_type( vector_space = fs%get_instance( W0 ) )

    r_rho_proxy  = r_rho%get_proxy()
    u_proxy      = u%get_proxy()
    phi_proxy    = phi%get_proxy()
    chi_proxy(1) = chi(1)%get_proxy()
    chi_proxy(2) = chi(2)%get_proxy()
    chi_proxy(3) = chi(3)%get_proxy()
    
    nlayers = r_rho_proxy%vspace%get_nlayers()
    nqp_h=qr%get_nqp_h()
    nqp_v=qr%get_nqp_v()
    zp=>qr%get_xqp_v()
    xp=>qr%get_xqp_h()
    wh=>qr%get_wqp_h()
    wv=>qr%get_wqp_v()

    ndf_w3  = r_rho_proxy%vspace%get_ndf( )
    dim_w3  = r_rho_proxy%vspace%get_dim_space( )
    undf_w3 = r_rho_proxy%vspace%get_undf()
    allocate(basis_w3(dim_w3,ndf_w3,nqp_h,nqp_v))

    ndf_w2      = u_proxy%vspace%get_ndf( )
    dim_w2      = u_proxy%vspace%get_dim_space( )
    diff_dim_w2 = u_proxy%vspace%get_dim_space_diff( )
    undf_w2     = u_proxy%vspace%get_undf()
    allocate(basis_w2(dim_w2,ndf_w2,nqp_h,nqp_v))
    allocate(diff_basis_w2(diff_dim_w2,ndf_w2,nqp_h,nqp_v))

    ndf_w0      = chi_p(1)%vspace%get_ndf( )
    dim_w0      = chi_p(1)%vspace%get_dim_space( )
    diff_dim_w0 = chi_p(1)%vspace%get_dim_space_diff( )
    undf_w0     = chi_p(1)%vspace%get_undf()
    allocate(basis_w0(dim_w0,ndf_w0,nqp_h,nqp_v))
    allocate(diff_basis_w0(diff_dim_w0,ndf_w0,nqp_h,nqp_v))

    call r_rho_proxy%vspace%compute_basis_function(basis_w3, ndf_w3,     & 
                                                   nqp_h, nqp_v, xp, zp)

    call u_proxy%vspace%compute_basis_function(basis_w2, ndf_w2,         & 
                                               nqp_h, nqp_v, xp, zp)

    call chi_p(1)%vspace%compute_basis_function(basis_w0, ndf_w0,    & 
                                                    nqp_h, nqp_v, xp, zp)
    call u_proxy%vspace%compute_diff_basis_function(                     &
         diff_basis_w2, ndf_w2, nqp_h, nqp_v, xp, zp)
    call chi_p(1)%vspace%compute_diff_basis_function(                &
         diff_basis_w0, ndf_w0, nqp_h, nqp_v, xp, zp)

    cell = 1

    map_w3 => r_rho_proxy%vspace%get_cell_dofmap( cell )
    map_w2 => u_proxy%vspace%get_cell_dofmap( cell )
    map_w0 => chi_p(1)%vspace%get_cell_dofmap( cell )
    orientation_w2 => u_proxy%vspace%get_cell_orientation( cell )
!   Create the data
    r_rho_proxy%data(:) = 0.0_r_def
    u_proxy%data(:) = 0.0_r_def
    call linear_rrho_code( nlayers,                          &
                           r_rho_proxy%data,                 &
                           u_proxy%data,                     &
                           phi_proxy%data,                   &
                           chi_p(1)%data,                    &
                           chi_p(2)%data,                    &
                           chi_p(3)%data,                    &
                           ndf_w3,                           &
                           undf_w3,                          &
                           map_w3,                           &
                           basis_w3,                         &
                           ndf_w2,                           &
                           undf_w2,                          &
                           map_w2,                           &
                           basis_w2,                         &
                           diff_basis_w2,                    &
                           orientation_w2,                   &
                           ndf_w0,                           &
                           undf_w0,                          &
                           map_w0,                           &
                           basis_w0,                         &
                           diff_basis_w0,                    &   
                           nqp_h,                            &
                           nqp_v,                            &
                           wh,                               &
                           wv                                &
                           )
  
    deallocate(basis_w3, basis_w2, diff_basis_w2, basis_w0, diff_basis_w0)
    allocate( answer(undf_w3) )
    
    answer = 0.0_r_def
    @assertEqual(answer, r_rho_proxy%data(:), tol)

    deallocate( answer )
    !tear down ...
    call fs_destroy()
  
  end subroutine linear_rrho_kernel_test

end module linear_rrho_kernel_mod_test
