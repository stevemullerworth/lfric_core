module enforce_upper_bound_kernel_mod_test

  use constants_mod, only : r_def, i_def
  use funit

  implicit none

contains

  @test
  subroutine test_of_enforce_upper_bound()

    use sci_enforce_upper_bound_kernel_mod, only : enforce_upper_bound_code

    implicit none

    real(kind=r_def)            :: field(3), limited_field(3), upper_bound
    real(kind=r_def), parameter :: tol = 1.0e-14_r_def
    integer(kind=i_def)         :: map(3)

    ! Make up a field, upper bound and expected output field
    ! The output field should have any values less than upper_bound set to zero.
    upper_bound = 1.e-6_r_def
    field(:) = [ 1.e-8_r_def, -2.0_r_def, 1.0e-5_r_def ]
    limited_field(:) = [ 1.e-8_r_def, -2.0_r_def, upper_bound ]
    map(:) = [1, 2, 3]

    call enforce_upper_bound_code(1, field, upper_bound, upper_bound, 3, 3, map)
    @assertEqual( field, limited_field, tol )

  end subroutine test_of_enforce_upper_bound

end module enforce_upper_bound_kernel_mod_test
